{
  "job-updater-policy": {
    "resource_type": "iam_policy",
    "policy_content": {
      "Version": "2012-10-17",
      "Statement": [
        {
          "Action": [
            "ssm:DeleteParameter"
          ],
          "Resource": "*",
          "Effect": "Allow"
        }
      ]
    }
  },

  "job-updater-role": {
    "predefined_policies": [],
    "principal_service": "lambda",
    "custom_policies": [
      "lambda-basic-execution",
      "job-updater-policy"
    ],
    "resource_type": "iam_role"
  },
  "r8s-job-state-update": {
    "resource_type": "cloudwatch_rule",
    "rule_type": "api_call",
    "custom_pattern": {
      "source": [
        "aws.batch"
      ]
    }
  }
}